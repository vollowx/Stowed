#!/usr/bin/env bash

base=$(xdg-user-dir PICTURES)

if [ ! -d "$base/Wallpapers" ]; then
  exit 1
fi

cd "$base/Wallpapers/"
choice=$(find -type f -printf '%P\n' | dmenu wallpaper\>)

if [ -z "$choice" ]; then
  exit 1
fi

ln -sf "$base/Wallpapers/$choice" "$base/wallpaper"
swaymsg reload
notify-send "Sway" "Wallpaper is now\n$choice"
