set page-padding 10
set selection-clipboard clipboard
set font "monospace normal 10"
set statusbar-v-padding 7 # to keep the same height as qutebrowser

map H zoom in
map L zoom out
map r reload
map I recolor
map w adjust_window width
map f adjust_window best-fit

set default-fg                "#ffffff"
set default-bg                "#161616"

set completion-bg             "#2e2e2e"
set completion-fg             "#ffffff"
set completion-highlight-bg   "#4f4f4f"
set completion-highlight-fg   "#ffffff"
set completion-group-bg       "#2e2e2e"
set completion-group-fg       "#78a9ff"

set statusbar-fg              "#ffffff"
set statusbar-bg              "#0d0d0d"

set notification-bg           "#2e2e2e"
set notification-fg           "#ffffff"
set notification-error-bg     "#2e2e2e"
set notification-error-fg     "#ff8389"
set notification-warning-bg   "#2e2e2e"
set notification-warning-fg   "#ab8600"

set inputbar-fg               "#ffffff"
set inputbar-bg               "#2e2e2e"

set recolor                   "true"
set recolor-lightcolor        "#161616"
set recolor-darkcolor         "#ffffff"

set index-fg                  "#ffffff"
set index-bg                  "#161616"
