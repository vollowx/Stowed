  $mauve     #be95ff
  $red       #ff8389
  $maroon    #ff8389
  $peach     #d44a1c
  $yellow    #ab8600
  $green     #08bdba
  $teal      #33b1ff
  $sky       #33b1ff
  $sapphire  #33b1ff
  $blue      #78a9ff
  $lavender  #78a9ff
  $text      #ffffff
  $subtext1  #f4f4f4
  $subtext0  #e0e0e0
